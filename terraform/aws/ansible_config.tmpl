#
# Infrastructure configuration
#

# Target environment (e.g. cloud provider)
target_environment: 'AWS'

# Spotfire Server release
spotfire_version: '${ spotfire_version }'

# Spotfire DB
#db_type: postgres
db_host: ${ db_host }
#db_port: 5432

# Spotfire DB Admin user and password
db_admin_user: '${ db_admin_user }'
db_admin_password: '${ db_admin_password }'

# Spotfire Database name, username and password for the Spotfire database.
db_name: '${ db_name }'
# NOTE: For AWS, we use the same user&password for the spotfiredb than for the dbserver
db_user: '${ db_admin_user }'
db_password: '${ db_admin_password }'

# Spotfire Admin GUI user and password
spotfire_ui_admin_user: '${ ui_admin_user }'
spotfire_ui_admin_password: '${ ui_admin_password }'

# Jumphost credentials
jumphost_user: '${ jumphost_user }'
jumphost_host: '${ jumphost_host }'

# Spotfire Server credentials
sfs_user: '${ sfs_user }'

# Web Player credentials
sfwp_user: '${ sfwp_user }'
sfwp_password: '${ sfwp_password }'

# Note: Using autogenerated AWS SSH keys, the path is relative to Ansible playbooks location
#ansible_ssh_private_key_file: '../terraform/aws/${ ssh_priv_key_file }'
#ssh_private_key_file: '../terraform/aws/${ ssh_priv_key_file }'
ansible_ssh_private_key_file: '${ ssh_priv_key_file }'
ssh_private_key_file: '${ ssh_priv_key_file }'